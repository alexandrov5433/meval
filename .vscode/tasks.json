{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "gcc build",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "array/*.c",
                "calculation/*.c",
                "regex/*.c",
                "argumentParsing/*.c",
                "data.c",
                "main.c",
                "-o",
                "${workspaceFolder}/meval"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}